<div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
        <strong><h1>Market Checkout</h1></strong>
        <hr>
        <h4>Your Total: ${{ total }}</h4>
        <hr>

        <!-- Error Panel -->
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>

        <!-- Checkout Form -->
        <form id="checkout-form" action="/checkout" method="post">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input id="name" type="text" name="name" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input id="address" type="text" name="address" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-owner">Card Owner</label>
                        <input id="card-owner" type="text" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Card Number</label>
                        <input id="card-number" type="text" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="exp-month">Exp. Month</label>
                                <input id="exp-month" type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="exp-year">Exp. Year</label>
                                <input id="exp-year" type="text" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="cvc">CVC</label>
                        <input id="cvc" type="text" class="form-control" required>
                    </div>
                </div>
            </div>
            <button class="btn btn-success">Buy</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>
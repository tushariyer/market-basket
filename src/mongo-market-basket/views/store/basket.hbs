{{# if products }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-6 col-md-offset-3">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <div class="badge">{{ this.qty }}</div>
                        <strong>{{ this.item.title }}</strong>
                        <span class="label label-success">$ {{ this.price }}</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-sx dropdown-toggle" data-toggle="dropdown" type="button">Remove <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/removeone/{{ this.item._id }}">Remove One</a></li>
                                <li><a href="/removeall/{{ this.item._id }}">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-6 col-md-offset-3">
            <strong>Total: ${{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-6 col-md-offset-3">
            <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-sm-offset-6 col-md-offset-3">
            <strong><h2>Basket Empty</h2></strong>
        </div>
    </div>
    <hr>
{{/if}}


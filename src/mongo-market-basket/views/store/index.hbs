<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessage}}hidden{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products}}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img class="img-responsive" src="{{ this.imageDir }}" alt="banana">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/add/{{ this._id }}" class="btn btn-primary pull-right" role="button">Add to Basket</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}